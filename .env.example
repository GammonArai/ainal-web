# 愛なるマッサージ 環境設定ファイル
# Ainaru Massage CMS Environment Configuration

# データベース設定
DB_HOST=localhost
DB_PORT=3306
DB_NAME=ainaru_massage_db
DB_USER=your_username
DB_PASSWORD=your_password

# JWT設定
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# サーバー設定
PORT=3000
NODE_ENV=development
API_PREFIX=/api/v1

# CORS設定
CORS_ORIGIN=http://localhost:8000

# レート制限設定
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# PayPay決済設定
PAYPAY_API_KEY=your_paypay_api_key
PAYPAY_API_SECRET=your_paypay_api_secret
PAYPAY_MERCHANT_ID=your_merchant_id
PAYPAY_SANDBOX=true

# Telegram Bot設定
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# セキュリティ設定
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# ログ設定
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# アップロード設定
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=./uploads

# メール設定（将来の拡張用）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@ainaru-massage.com

# AWS設定（将来の拡張用）
AWS_REGION=ap-northeast-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=ainaru-massage-uploads

# Redis設定（将来の拡張用）
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# 管理設定
ADMIN_EMAIL=admin@ainaru-massage.com
ADMIN_PASSWORD=change-this-password

# 営業設定
BUSINESS_HOURS_START=10:00
BUSINESS_HOURS_END=03:00
LAST_BOOKING_TIME=02:00
DEFAULT_SESSION_DURATION=60

# 通知設定
NOTIFICATION_WEBHOOK_URL=your_webhook_url
SLACK_WEBHOOK_URL=your_slack_webhook_url